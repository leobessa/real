!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application', 'formtastic', 'formtastic_changes', 'menu'
    = yield(:head)
  
  %body 
    %ul#menu
      %li= link_to "Home", root_url
      %li= link_to t('accounts.index.title'), accounts_path
      %li= link_to t('accounting_transactions.index.title'), accounting_transactions_path
      %li= link_to t('accounts.balance_sheet.title'), balance_sheet_accounts_path
      
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      - if show_title?
        %h1=h yield(:title)
      
      = yield

  = javascript_include_tag :all, :cache => true